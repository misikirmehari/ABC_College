<p id="notice"><%= notice %></p>

<h1>Professors</h1>
<%= form_tag(professors_path , method:'get') do %>
  <%= text_field_tag :search_field, params[:search] %>
  <%= submit_tag('Search') %>
  <% end %>

<div class="navbar-default">
  <p>
    <%= link_to 'Create New Professor', new_professor_path %>
  </p>

</div>
<div class="jumbotron">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= professor.email %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<!-- Allow paginaton In view -->
<div class="digg_pagination">
  <%= will_paginate @professors, :container => false %>
</div>

